<%= render 'shared/search_banner' %>

<div class="container text-center">
  <h1>Car Listings</h1>
  <div class="row">
    <% @cars.each do |car| %>
      <div class="col-xs-12 col-sm-4">
        <!-- calls helper method, returns url -->
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= car_image_url?(car) %>');">
          <div class="card-location"><%= "car.location" %>
          </div>
          <div class="card-description">
            <h2><%= car.brand %> <%= car.model %></h2>
          </div>
          <%= link_to "", car_path(car), class: "card-link" %>
        </div>
      </div>
    <%end%>
  </div>
</div>

<div class="text-center padded">
  <%= link_to "Add new car", new_car_path, class: "btn btn-lg btn-success" %>
</div>

<div id="map" style="width: 100%; height: 600px;"></div>

<% content_for(:after_js) do %>
  <script>
    $(document).ready(function() {
      var handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function() {
        markers = handler.addMarkers(<%= raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        if (markers.length == 0) {
          handler.getMap().setZoom(2);
        } else if (markers.length == 1) {
          handler.getMap().setZoom(14);
        }
      });
    });
  </script>
<% end %>
